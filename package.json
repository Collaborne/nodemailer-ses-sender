{
	"name": "nodemailer-ses-sender",
	"version": "1.0.6",
	"description": "Send emails through SES with Nodemailer (wrapper for the SES transport in Nodemailer)",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc",
		"lint": "tslint -c tslint.json \"src/**/*.ts\" \"test/**/*.ts\"",
		"test": "TS_NODE_FILES=true node ${_NODE_ARGS} node_modules/.bin/_mocha --recursive -r ts-node/register \"test/**/*.ts\"",
		"prepublish": "npm run lint && npm run build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Collaborne/nodemailer-ses-sender.git"
	},
	"keywords": [
		"nodemailer",
		"ses",
		"aws",
		"email"
	],
	"author": "Claudia Minardi <claudia.minardi@collaborne.com> (Collaborne)",
	"license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/Collaborne/nodemailer-ses-sender/issues"
	},
	"homepage": "https://github.com/Collaborne/nodemailer-ses-sender#readme",
	"dependencies": {
		"@log4js-node/log4js-api": "^1.0.2",
		"aws-sdk": "^2.162.0",
		"nodemailer": "^4.4.0"
	},
	"devDependencies": {
		"@collaborne/tsconfig": "^0.3.0",
		"@types/chai": "^4.1.4",
		"@types/mocha": "^5.2.5",
		"@types/node": "^10.5.3",
		"@types/nodemailer": "^4.6.2",
		"chai": "*",
		"mocha": "*",
		"smtp-server": "^3.4.1",
		"ts-node": "^7.0.0",
		"tslint": "^5.11.0",
		"tslint-config-collaborne": "^0.0.2",
		"typescript": "^3.2.2",
		"yargs": "^10.0.3"
	}
}
